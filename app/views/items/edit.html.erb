<h1>here be edits</h1>
<%= render 'form', item: @item %>
<%= form_for @item do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <div class="field">
  <%= f.label :image %><br>
  <%= f.file_field :image %>
    <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %>
    <% end %>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>
